@model List<BlogProjesi.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<h2>Kategoriler</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Yeni Kategori</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Name</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
