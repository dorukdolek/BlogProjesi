@model BlogProjesi.Models.Post

@{
    ViewData["Title"] = "Yazıyı Sil";
}

<div class="alert alert-danger p-4 shadow-sm">
    <h4>Bu yazıyı silmek istediğinizden emin misiniz?</h4>

    <dl class="row mt-3">
        <dt class="col-sm-2">Başlık</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">İçerik</dt>
        <dd class="col-sm-10">@Model.Content</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Evet, Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
